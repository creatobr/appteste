<script type="text/javascript">

    $(function() {
        var socialBlock = $('.social_login').closest('ul');
        $('<div></div>').addClass("form-overlay").css("display", "none").appendTo(".login-form");
        $('<div class="form-disabled-loader" style="display: none">' +
            '<div class="account-lock-loader"></div>' +
            '</div>').appendTo(socialBlock);

        $('.social_login').click(function(e){
            if ($(".login-form")[0]){
                var position = $('.login-form').position();
                var left = position.left;
                var top = position.top;
                var width = $('.login-form').outerWidth();
                var height = $('.login-form').outerHeight();

                $('.form-disabled-loader canvas').css({
                    "cursor": "progress !important"
                });
                $('.form-overlay').css({
                    "position": "absolute",
                    "left": left-10 + "px",
                    "top": top + "px",
                    "background-color": "rgb(255,255,255)",
                    "width": width+20+"px",
                    "height": height + "px",
                    "opacity": ".8",
                    "z-index": "10",
                    "cursor": "progress",
                    "background-image": "url(/themes/h2/img/ajax-loading.gif)",
                    "background-position": "50% 50%",
                    "background-repeat": "no-repeat"
                }).show();
            }
        });
    });
function echeck(str) {
        var err = "Por favor insira um endereço de email válido";
		var at="@"
		var dot="."
		var lat=str.indexOf(at)
		var lstr=str.length
		var ldot=str.indexOf(dot)
		if (str.indexOf(at)==-1){
		   alert(err)
		   return false
		}

		if (str.indexOf(at)==-1 || str.indexOf(at)==0 || str.indexOf(at)==lstr){
		   alert(err)
		   return false
		}

		if (str.indexOf(dot)==-1 || str.indexOf(dot)==0 || str.indexOf(dot)==lstr){
		    alert(err)
		    return false
		}

		 if (str.indexOf(at,(lat+1))!=-1){
		    alert(err)
		    return false
		 }

		 if (str.substring(lat-1,lat)==dot || str.substring(lat+1,lat+2)==dot){
		    alert(err)
		    return false
		 }

		 if (str.indexOf(dot,(lat+2))==-1){
		    alert(err)
		    return false
		 }

		 if (str.indexOf(" ")!=-1){
		    alert(err)
		    return false
		 }

 		 return true
	}

function ValidateForm(){
	var emailID=document.login_form.email
	var ps=document.login_form.password

	if ((emailID.value==null)||(emailID.value=="")){
		alert("Por favor insira o endereço de email");
		emailID.focus();
		return false
	}
	if (echeck(emailID.value)==false){
		emailID.focus();
		return false
	}
	if (ps.value==''){
		ps.focus();
        alert("Por favor insira a senha");
		return false
	}
    return true
 }
